{
  "manifest_version": 3,
  "name": "TCDD Bilet Otomasyonu",
  "version": "1.0",
  "description": "TCDD'nin bilet alma işlemleri için POST isteklerini otomatik gönderir.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://ebilet.tcddtasimacilik.gov.tr/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
